@{
    Layout = "~/Views/Shared/_LayoutSite.cshtml";

    ViewData["Title"] = "Master Unit";
}

@section Styles{
    <link href="~/lib/datatable/jquery.datatables.min.css?ver=@DateTime.Now.Ticks.ToString()" rel="stylesheet" />
}
<style>
    .btn-search {
        border: 0px;
        background-color: transparent;
        color: inherit;
    }

    .btn-rounded {
        border-radius: 20px;
    }

    .search-rounded {
        cursor: pointer;
        border-top-right-radius: 10rem;
        border-bottom-right-radius: 10rem;
    }

    .form-control-rounded {
        border-radius: 10rem
    }
</style>

<div class="container mt-3">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">รายการยูนิต</h3>
        </div>
        <div class="card-body border-bottom py-3">
            <div class="row d-flex align-items-center">
                <!-- First column: Dropdown -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="input-group">
                        <select class="form-select" id="dropdown-select">
                            <option value="1">ดิ ออเนอร์ โยธินพัฒนา</option>
                            <option value="2">เอสต้า ซีรีนิตี้ บรมราชชนนี</option>
                        </select>
                    </div>
                </div>
                <!-- Second column: Search form -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <form id="form-search" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-rounded" placeholder="Search..." autocomplete="off" name="strSearch">
                            <span class="input-group-text search-rounded">
                                <button id="btn-search" class="btn-search" type="submit">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
                <!-- Third column: Create button -->
                <div class="col-md-4 d-flex justify-content-end">
                    <button id="unit-create" class="btn btn-primary">
                        <i class="fa fa-plus" style="margin-right:5px"></i> Create
                    </button>
                </div>
            </div>
        </div>


        <div class="table-responsive">
            <div class="card-table table-responsive">
                <partial name="Partial_List_MUnit" />
            </div>
        </div>
    </div>
</div>

<partial name="Partial_Modal_Create_U" />
<partial name="Partial_Modal_Edit_U" />

@section Scripts {
    <script src="~/lib/datatable/jquery.datatables.min.js"></script>
    <script src="~/js/master/masterunit.js?version=@DateTime.Now.Ticks.ToString()"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            unit.init();
        });
    </script>
}