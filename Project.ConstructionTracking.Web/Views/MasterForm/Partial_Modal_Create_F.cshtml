@model Project.ConstructionTracking.Web.Models.MFormModel.ProjectTypeListModel

<div class="modal fade" id="modal-form-c" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div id="modal-format" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <label class="form-label">ประเภทโครงการ</label>
                        <select id="selectProjectType" class="form-control" name="vendor">
                            <option value="">Select Project Type</option>
                            @foreach (var projectType in Model.ProjectTypeList)
                            {
                                <option value="@projectType.ID">@projectType.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <label class="form-label">ชื่อประเภทฟอร์ม</label>
                        <input id="nameFormType" class="form-control" placeholder="กรุณากรอกข้อมูลชื่อประเภทฟอร์ม">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <label class="form-label">รายละเอียด</label>
                        <input id="descFormType" class="form-control" value="" placeholder="กรุณากรอกข้อมูลรายละเอียด">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                    Cancel
                </a>
                <button id="createFormType" class="btn btn-success ms-auto" data-bs-dismiss="modal">
                    บันทึก
                </button>
            </div>
        </div>
    </div>
</div>