        function openModalDataQC(action, data = null) {
            var myModal = new bootstrap.Modal(document.getElementById('insert-new-qc5'));

            // Set modal title based on action
            var modalTitle = document.getElementById('insert-new-qc5-Label');
            if (action === 'add') {
                modalTitle.textContent = 'เพิ่มข้อมูลรายการ';
                // Reset all form fields for adding new data
                document.getElementById('locationSelect').value = '0';
                document.getElementById('categorySelect').value = '0';
                document.getElementById('defectSelect').value = '0';
                document.getElementById('otherDefectInput').value = '';
                document.getElementById('otherDefectDiv').style.display = 'none';
                document.getElementById('commentTextarea').value = '';
                document.getElementById('majorDefectCheckbox').checked = false;
            } else if (action === 'edit' && data) {
                modalTitle.textContent = 'แก้ไขข้อมูลรายการ';
                // Populate form fields with existing data for editing
                document.getElementById('locationSelect').value = data.location;
                document.getElementById('categorySelect').value = data.category;
                document.getElementById('defectSelect').value = data.defect;
                document.getElementById('commentTextarea').value = data.comment;
                document.getElementById('majorDefectCheckbox').checked = data.majorDefect || false;
                // Show or hide the "other" defect input based on the defect value
                if (data.defect == '-1') {
                    document.getElementById('otherDefectDiv').style.display = 'block';
                } else {
                    document.getElementById('otherDefectDiv').style.display = 'none';
                }
            }

            // Show the modal
            myModal.show();
        }

        // Show or hide the "other" defect input based on the defect selection
        document.getElementById('defectSelect').addEventListener('change', function () {
            var otherDefectDiv = document.getElementById('otherDefectDiv');
            if (this.value == '-1') {
                otherDefectDiv.style.display = 'block';
            } else {
                otherDefectDiv.style.display = 'none';
            }
        });


