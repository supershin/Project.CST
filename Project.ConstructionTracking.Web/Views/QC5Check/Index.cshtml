                                @foreach (var item in ViewBag.ListDefectArea)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <input type="hidden" id="defectAreaId">
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-label">หมวดงาน</div>
                            <select id="dropdown2" class="form-control" disabled>
                                <option value="">กรุณาเลือก</option>
                            </select>
                            <input type="hidden" id="defectTypeId">
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-label">รายการ defect</div>
                            <select id="dropdown3" class="form-control" disabled>
                                <option value="">กรุณาเลือก</option>
