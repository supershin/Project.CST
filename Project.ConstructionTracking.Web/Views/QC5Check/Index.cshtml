<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="card bg-primary text-primary-fg">
            <div class="card-stamp">
                <div class="card-stamp-icon bg-white text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-home-heart">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M21 12l-9 -9l-9 9h2v7a2 2 0 0 0 2 2h6" />
                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2c.39 0 .754 .112 1.061 .304" />
                        <path d="M19 21.5l2.518 -2.58a1.74 1.74 0 0 0 0 -2.413a1.627 1.627 0 0 0 -2.346 0l-.168 .172l-.168 -.172a1.627 1.627 0 0 0 -2.346 0a1.74 1.74 0 0 0 0 2.412l2.51 2.59z" />
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-baseline">
                        <form asp-controller="SummaryUnitQC" asp-action="index">
                            <input type="hidden" name="ProjectId" value="@ViewBag.ProjectId" />
                            <input type="hidden" name="projectName" value="@ViewBag.ProjectName" />
                            <input type="hidden" name="UnitId" value="@ViewBag.UnitId" />
                            <button class="status-dot bg-transparent">
                                <i class="fa-solid fa-chevron-left fa-xl" style="color: #f7f7f7;"></i>
                            </button>
                        </form>
                    </div>
                    <div class="d-block d-sm-flex align-items-baseline custom-heading">
                        <h1 class="mb-0 header-text">Unit : @UnitCode</h1>
                        <div class="text-muted">
                            <h5 class="text-yellow d-block d-sm-inline ms-sm-2 mb-0">@ProjectName (สถานะ : @UnitStatusName)</h5>
                        </div>
                    </div>
                    <div class="align-items-right">
                        <button class="status-dot bg-transparent">
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <label id="statusLabel" class="form-label custom-label">@ActionType</label>
        <div class="container mt-1 mb-3">
            <div class="row">
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">QC 5</a></li>
                                <li class="breadcrumb-item" aria-current="page">ตรวจครั้งที่ @Seq</li>
                                @if (@QC5UnitStatusID == SystemConstant.UnitQCStatus.Pass)
                                {
                                    <li class="breadcrumb-item" aria-current="page">
                                        สถานะ : <span class="badge bg-success rounded-pill text-white">ผ่าน</span>
                                    </li>
                                }
                                else if (@QC5UnitStatusID == SystemConstant.UnitQCStatus.NotPass)
                                {
                                    <li class="breadcrumb-item" aria-current="page">
                                        สถานะ : <span class="badge bg-danger rounded-pill text-white">ไม่ผ่าน</span>
                                    </li>
                                }
                                else if (@QC5UnitStatusID == SystemConstant.UnitQCStatus.IsNotReadyInspect)
                                {
                                    <li class="breadcrumb-item" aria-current="page">
                                        สถานะ : <span class="badge bg-danger rounded-pill text-white">ผู้รับเหมาไม่พร้อมให้ตรวจ</span>
                                    </li>
                                }
                                else if (@QC5UnitStatusID == SystemConstant.UnitQCStatus.IsNotReadyInspect)
                                {
                                    <li class="breadcrumb-item" aria-current="page">
                                        สถานะ : <span class="badge bg-primary rounded-pill text-white">ผ่านแบบมีเงื่อนไข</span>
                                    </li>
                                }
                            </ol>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-sm-6 mb-3">
                                    <div id="summaryContainer">
                                        @await Html.PartialAsync("PartialSummaryQC5", ViewData["DataSummaryQC5"])
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    @foreach (var image in ImageQC5UnitList)
                                    {
                                        <div class="position-relative d-inline-block mb-3">
                                            <a data-fslightbox="gallery" href="~/@image.Text">
                                                <img src="~/@image.Text" alt="Profile Image" class="img-thumbnail" style="width: 90px; height: 90px; border-radius: 50%; object-fit: cover;">
                                            </a>
                                            @if (ViewBag.ActionTypeEn != "submit")
                                            {
                                                <button type="button" class="remove-button" onclick="RemoveImage('@image.ValueGuid')">✖</button>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-sm-7 mb-3">
                            <div class="card">
                                <div class="card-header">
                                    <!-- Search Input -->
                                    <div class="row col-12">
                                        <div class="col-12 col-sm-6 mb-1">
                                            <input type="text" id="searchInput" class="form-control" placeholder="ค้นหา..." onkeyup="filterCards()">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <select id="statusFilter" class="form-select" onchange="filterCards()">
                                                <option value="">ทั้งหมด</option>
                                                <option value="27">ผ่าน</option>
                                                <option value="28">ไม่ผ่าน</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group list-group-flush overflow-auto" style="max-height: 39rem">
                                    <partial name="PartialDefectList" model="Model" seq="@ViewBag.Seq" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-5">
                            <div class="row">
                                <div class="col-12">
                                    <partial name="PartialSaveSubmitCard" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->

    <div class="modal fade" id="insert-new-qc5" tabindex="-1" aria-labelledby="insert-new-qc5-Label" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
