@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
    var ddlListUnit = ViewBag.DDLListUnit;
    var ddlListUnitStatus = ViewBag.DDLList; 
}
@model List<Project.ConstructionTracking.Web.Models.StoreProcedureModel.UnitListModel>

<style>
    .profile-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin: 20px auto 0; 
    }

    #card-unit {
        width: 100%;
        text-align: center;
    }

    .card-body {
        padding-top: 20px;
    }

    .card-title {
        font-size: 1.25rem; 
        margin-top: 10px; 
    }

    .card-text {
        font-size: 1rem; /* Adjust the font size of the text */
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .text-yellow {
        color: yellow;
    }

    .custom-heading {
        line-height: 1.2;
    }

    .status-dot {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        color: white;
        border: none;
        outline: none;
    }
</style>

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="card bg-primary text-primary-fg">
            <div class="card-stamp">
                <div class="card-stamp-icon bg-white text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-home-heart">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M21 12l-9 -9l-9 9h2v7a2 2 0 0 0 2 2h6" />
                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2c.39 0 .754 .112 1.061 .304" />
                        <path d="M19 21.5l2.518 -2.58a1.74 1.74 0 0 0 0 -2.413a1.627 1.627 0 0 0 -2.346 0l-.168 .172l-.168 -.172a1.627 1.627 0 0 0 -2.346 0a1.74 1.74 0 0 0 0 2.412l2.51 2.59z" />
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-baseline">
                        <form asp-controller="ProjectList" asp-action="index">
                            <button class="status-dot bg-transparent">
                                <i class="fa-solid fa-chevron-left fa-xl" style="color: #f7f7f7;"></i>
                            </button>
                        </form>
                    </div>
                    <div class="d-block d-sm-flex align-items-baseline custom-heading">
                        <h1 class="mb-0 header-text">ค้นหา Unit</h1>
                        <div class="text-muted">
                            <h5 class="text-yellow d-block d-sm-inline ms-sm-2 mb-0">โครงการ @projectName</h5>
                        </div>
                    </div>
                    <div class="align-items-right">
                        <button class="status-dot bg-transparent">
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="col-12">
                <div class="card-body">
                    <form id="form-search" method="post" asp-controller="Unitlist" asp-action="SearchUnits">
                        <input type="hidden" id="ProjectId" name="ProjectId" value="@projectId" />
                        <input type="hidden" id="ProjectName" name="ProjectName" value="@projectName" />
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col-12 col-sm-6 mb-2">
                                            <select id="ddlListUnit" name="selectedUnitValue[]" multiple>
                                                @foreach (var item in ddlListUnit)
                                                {
                                                    <option value="@item.ValueGuid">@item.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <div class="row">
                                                <div class="col-10">
                                                    <select id="ddlListUnitStatus" name="selectedUnitFormStatus[]" multiple>
                                                        @foreach (var item in ddlListUnitStatus)
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-2">
                                                    <button type="submit" class="btn btn-icon" aria-label="Button">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                            <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
                                                            <path d="M21 21l-6 -6" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <br>
            <div class="col-12">
                <div class="container">
                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-4" id="unit-list">
                        @foreach (var unit in Model)
                        {
                            <div class="col unit-card" data-unit-code="@unit.UnitCode">
                                <form asp-controller="Unitlist" asp-action="GoToByRole" method="post" style="cursor: pointer;" onclick="this.submit()">
                                    <input type="hidden" name="projectId" value="@projectId" />
                                    <input type="hidden" name="projectName" value="@projectName" />
                                    <input type="hidden" name="unitId" value="@unit.UnitID" />
                                    <input type="hidden" name="UnitCode" value="@unit.UnitCode" />
                                    <input type="hidden" name="UnitStatusName" value="@unit.UnitStatusName" />
                                    <div class="card" id="card-unit">
                                        <img src="~/img/img23.jpg" class="card-img-top profile-img" alt="Profile Picture">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">@unit.UnitCode</h5>
                                            <p class="card-text">สถานะ : @unit.UnitStatusName</p>
                                            @if (!string.IsNullOrEmpty(unit.FormName))
                                            {
                                                <button type="button" class="btn btn-primary btn-sm">@unit.FormName</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-secondary btn-sm">ยังไม่เริ่มตรวจ</button>
                                            }
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

    <script>
        $(document).ready(function () {
            // Define baseUrl for the project
            var baseUrl = '@ViewBag.baseUrl'; // Ensure you pass baseUrl from the server-side

            // Initialize Choices.js for the dropdowns
            const unitDropdown = new Choices('#ddlListUnit', {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'เลือกยูนิต...',
            });

            const unitStatusDropdown = new Choices('#ddlListUnitStatus', {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'เลือกสถานะ...',
            });

            // Handle form submission via AJAX
            $('#form-search').on('submit', function (e) {
                e.preventDefault(); // Prevent default form submission

                const projectId = $('#ProjectId').val();
                const selectedUnits = unitDropdown.getValue(true).join(',');
                const selectedStatuses = unitStatusDropdown.getValue(true).join(',');

                // Make an AJAX request to filter units
                $.ajax({
                    url: baseUrl + 'Unitlist/SearchData',
                    type: 'GET',
                    data: {
                        selectedProjectValue: projectId,
                        selectedUnitValue: selectedUnits,
                        selectedUnitFormStatus: selectedStatuses
                    },
                    success: function (data) {
                        updateUnitList(data);
                    },
                    error: function () {
                        console.log("Error fetching data.");
                    }
                });
            });

            // Update the unit cards dynamically based on the response
            function updateUnitList(data) {
                const unitList = $('#unit-list');
                unitList.empty(); // Clear existing units

                $.each(data, function (index, unit) {
                    const cardHtml = `
                                <div class="col unit-card" data-unit-code="${unit.UnitCode}">
                                    <form action="${baseUrl}Unitlist/GoToByRole" method="post" style="cursor: pointer;" onclick="this.submit()">
                                        <input type="hidden" name="projectId" value="${unit.ProjectID}" />
                                        <input type="hidden" name="projectName" value="${unit.ProjectName}" />
                                        <input type="hidden" name="unitId" value="${unit.UnitID}" />
                                        <input type="hidden" name="UnitCode" value="${unit.UnitCode}" />
                                        <input type="hidden" name="UnitStatusName" value="${unit.UnitStatusName}" />
                                        <div class="card" id="card-unit">
                                                   <img src="${baseUrl}/img/img23.jpg" class="card-img-top profile-img" alt="Profile Picture">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">${unit.UnitCode}</h5>
                                                <p class="card-text">สถานะ : ${unit.UnitStatusName}</p>
                                                ${unit.FormName ?
                                                `<button type="button" class="btn btn-primary btn-sm">${unit.FormName}</button>` :
                                                `<button type="button" class="btn btn-secondary btn-sm">ยังไม่เริ่มตรวจ</button>`}
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            `;
                    unitList.append(cardHtml);
                });
            }
        });
    </script>
}



