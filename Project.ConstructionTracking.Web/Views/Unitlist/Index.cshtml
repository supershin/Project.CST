@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var unitCodes = Model.Select(u => u.UnitCode).Distinct().ToList();
    var unitCodesJson = Newtonsoft.Json.JsonConvert.SerializeObject(unitCodes);
    var unitsJson = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
    var ddlList = ViewBag.DDLList as List<Project.ConstructionTracking.Web.Models.GetDDL>;
}
@model List<Project.ConstructionTracking.Web.Models.UnitModel>

<script src="https://kit.fontawesome.com/21fea36ed8.js" crossorigin="anonymous"></script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<style>
    .profile-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin: 20px auto 0; /* Adjusted margin to position image a little down */
    }

    #card-unit {
        width: 100%;
        text-align: center; /* Center-align text within the card */
    }

    .card-body {
        padding-top: 20px; /* Optional: Add some padding to separate image from the text */
    }

    .card-title {
        font-size: 1.25rem; /* Adjust the font size of the title */
        margin-top: 10px; /* Add margin to the top of the title */
    }

    .card-text {
        font-size: 1rem; /* Adjust the font size of the text */
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .text-yellow {
        color: yellow;
    }

    .custom-heading {
        line-height: 1.2;
    }

    .status-dot {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        color: white;
        border: none;
        outline: none;
    }
</style>

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="card bg-primary text-primary-fg">
            <div class="card-stamp">
                <div class="card-stamp-icon bg-white text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-home-heart">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M21 12l-9 -9l-9 9h2v7a2 2 0 0 0 2 2h6" />
                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2c.39 0 .754 .112 1.061 .304" />
                        <path d="M19 21.5l2.518 -2.58a1.74 1.74 0 0 0 0 -2.413a1.627 1.627 0 0 0 -2.346 0l-.168 .172l-.168 -.172a1.627 1.627 0 0 0 -2.346 0a1.74 1.74 0 0 0 0 2.412l2.51 2.59z" />
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-baseline">
                        <form asp-controller="ProjectList" asp-action="index">
                            <button class="status-dot bg-transparent">
                                <i class="fa-solid fa-chevron-left fa-xl" style="color: #f7f7f7;"></i>
                            </button>
                        </form>
                    </div>
                    <div class="d-block d-sm-flex align-items-baseline custom-heading">
                        <h1 class="mb-0 header-text">ค้นหา Unit</h1>
                        <div class="text-muted">
                            <h5 class="text-yellow d-block d-sm-inline ms-sm-2 mb-0">โครงการ @projectName</h5>
                        </div>
                    </div>
                    <div class="align-items-right">
                        <button class="status-dot bg-transparent">
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="col-12">
                <div class="card-body">
                    <form id="form-search" method="post" asp-controller="Unitlist" asp-action="SearchUnits">
                        <input type="hidden" id="ProjectId" name="ProjectId" value="@projectId" />
                        <input type="hidden" id="ProjectName" name="ProjectName" value="@projectName" />
                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="mb-3">
                                    <div class="row g-2">
                                        <div class="col">
                                            <input type="text" id="Search" name="Search" class="form-control" placeholder="พิมพ์ Unit เพื่อค้นหา...">
                                        </div>
                                        <div class="col-auto">
                                            <select id="ddlList" name="unitStatusId" class="form-control">
                                                <option value="">ทั้งหมด</option>
                                                @if (ddlList != null)
                                                {
                                                    foreach (var item in ddlList)
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="col-auto">
                                            <button type="submit" class="btn btn-icon" aria-label="Button">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
                                                    <path d="M21 21l-6 -6" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <br>
            <div class="col-12">
                <div class="container">
                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-4" id="unit-list">
                        @foreach (var unit in Model)
                        {
                            <div class="col unit-card" data-unit-code="@unit.UnitCode">
                                <form asp-controller="Unitlist" asp-action="GoToByRole" method="post" style="cursor: pointer;" onclick="this.submit()">
                                    <input type="hidden" name="projectId" value="@projectId" />
                                    <input type="hidden" name="projectName" value="@projectName" />
                                    <input type="hidden" name="unitId" value="@unit.UnitID" />
                                    <input type="hidden" name="UnitCode" value="@unit.UnitCode" />
                                    <input type="hidden" name="UnitStatusName" value="@unit.UnitStatusName" />
                                    <div class="card" id="card-unit">
                                        <img src="~/img/img23.jpg" class="card-img-top profile-img" alt="Profile Picture">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">@unit.UnitCode</h5>
                                            <p class="card-text">สถานะ : @unit.UnitStatusName</p>
                                            @if (!string.IsNullOrEmpty(unit.FormName))
                                            {
                                                <button type="button" class="btn btn-primary btn-sm">@unit.FormName</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-secondary btn-sm">ยังไม่เริ่มตรวจ</button>
                                            }
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
    $(function () {
     
        var unitCodes = @Html.Raw(unitCodesJson);
        var allUnits = @Html.Raw(unitsJson);

        $("#Search").autocomplete({
            source: unitCodes,
            minLength: 2,
            select: function (event, ui) {
                // When an item is selected from the autocomplete list
                $("#Search").val(ui.item.value);
                $("#form-search").submit();
            }
        });

        $("#form-search").on("submit", function (e) {
            e.preventDefault();
            
            var searchTerm = $("#Search").val().toLowerCase();
            var selectedUnitStatusId = $("#ddlList").val();

            var filteredUnits = allUnits.filter(function (unit) {
                var matchesSearchTerm = unit.UnitCode.toLowerCase().includes(searchTerm);
                var matchesUnitStatus = !selectedUnitStatusId || unit.UnitStatusID == selectedUnitStatusId;
                return matchesSearchTerm && matchesUnitStatus;
            });

            if (searchTerm === "" && !selectedUnitStatusId) {
                filteredUnits = allUnits;
            }

            renderUnits(filteredUnits);
        });

        function renderUnits(units) {
            var $unitList = $("#unit-list");
            $unitList.empty();
            $.each(units, function (index, unit) {

                var baseUrl = '@(ViewBag.baseUrl)';

                var unitCard = `
                                <div class="col unit-card" data-unit-code="${unit.UnitCode}">
                                    <div class="card" id="card-unit">
                                        <img src="${baseUrl}img/img23.jpg" class="card-img-top profile-img" alt="Profile Picture">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">${unit.UnitCode}</h5>
                                            <p class="card-text">
                                                สถานะ : ${unit.UnitStatusName}
                                            </p>
                                            ${unit.FormName ? `<form action="${baseUrl}Unitlist/GoToByRole" method="post">
                                                                    <input type="hidden" name="projectId" value="@projectId" />
                                                                    <input type="hidden" name="projectName" value="@projectName" />
                                                                    <input type="hidden" name="unitId" value="${unit.UnitID}" />
                                                                    <input type="hidden" name="UnitCode" value="${unit.UnitCode}" />
                                                                    <input type="hidden" name="UnitStatusName" value="${unit.UnitStatusName}" />
                                                                    <button type="submit" class="btn btn-primary btn-sm">${unit.FormName}</button>
                                                                </form>`
                                                : `<form action="${baseUrl}Unitlist/GoToByRole" method="post">
                                                        <input type="hidden" name="projectId" value="@projectId" />
                                                        <input type="hidden" name="projectName" value="@projectName" />
                                                        <input type="hidden" name="unitId" value="${unit.UnitID}" />
                                                        <input type="hidden" name="UnitCode" value="${unit.UnitCode}" />
                                                        <input type="hidden" name="UnitStatusName" value="${unit.UnitStatusName}" />
                                                        <button type="submit" class="btn btn-secondary btn-sm">ยังไม่เริ่มตรวจ</button>
                                                   </form>`
                                            }
                                        </div>
                                    </div>
                                </div>`;

                $unitList.append(unitCard);
            });
        }
    });
</script>

