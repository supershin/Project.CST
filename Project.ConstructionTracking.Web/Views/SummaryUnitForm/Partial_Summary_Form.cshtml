@model List<Project.ConstructionTracking.Web.Models.StoreProcedureModel.SummeryUnitFormModel>

@{
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
    var UnitCode = ViewBag.UnitCode;
    var UnitStatusName = ViewBag.UnitStatusName;
}

<div class="container mt-1 mb-2">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6">
                <div class="card card-link card-link-pop mb-2">
                    <div class="row justify-content-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    @{
                                        string bgColorClass;

                                        if (item.PEColor == "bg-success" && item.PMColor == "bg-success" && @item.PCColor == "bg-primary")
                                        {
                                            bgColorClass = "btn-primary";
                                        }
                                        else if (item.PEColor == "bg-success" && item.PMColor == "bg-success" && @item.PCColor == "bg-success")
                                        {
                                            bgColorClass = "btn-success";
                                        }
                                        else if (item.PEColor == "bg-success" && item.PMColor == "bg-success" && @item.PCColor == "bg-danger")
                                        {
                                            bgColorClass = "btn-danger";
                                        }
                                        else if (item.PEColor == "bg-success" && item.PMColor == "bg-success")
                                        {
                                            bgColorClass = "btn-success";
                                        }
                                        else if (item.PEColor == "bg-sdanger" || item.PMColor == "bg-danger")
                                        {
                                            bgColorClass = "btn-danger";
                                        }
                                        else if (item.PEColor == "bg-swarning" || item.PMColor == "bg-warning" || item.PMColor == "")
                                        {
                                            bgColorClass = "btn-warning";
                                        }
                                        else
                                        {
                                            bgColorClass = "btn-secondary";
                                        }
                                    }
                                    <form asp-controller="SummaryUnitForm" asp-action="GoToFormGroup" method="post">
                                        <input type="hidden" name="projectId" value="@projectId" />
                                        <input type="hidden" name="projectName" value="@projectName" />
                                        <input type="hidden" name="FormID" value="@item.FormID" />
                                        <input type="hidden" name="UnitFormID" value="@item.UnitFormID" />
                                        <input type="hidden" name="UnitFormName" value="@item.FormName" />
                                        <input type="hidden" name="unitId" value="@item.UnitID" />
                                        <input type="hidden" name="UnitCode" value="@UnitCode" />
                                        <input type="hidden" name="UnitStatusName" value="@UnitStatusName" />
                                        <button type="submit" class="btn @bgColorClass fixed-size-btn">
                                            @item.FormName
                                        </button>
                                    </form>
                                </div>
                                <div class="col">
                                    <form asp-controller="SummaryUnitForm" asp-action="GoToFormGroup" method="post">
                                        <input type="hidden" name="projectId" value="@projectId" />
                                        <input type="hidden" name="projectName" value="@projectName" />
                                        <input type="hidden" name="FormID" value="@item.FormID" />
                                        <input type="hidden" name="UnitFormID" value="@item.UnitFormID" />
                                        <input type="hidden" name="UnitFormName" value="@item.FormName" />
                                        <input type="hidden" name="unitId" value="@item.UnitID" />
                                        <input type="hidden" name="UnitCode" value="@UnitCode" />
                                        <input type="hidden" name="UnitStatusName" value="@UnitStatusName" />
                                        <button type="submit" class="status-dot @item.PEColor @(item.PEColor == "bg-danger" || item.PEColor == "bg-warning" ? "status-dot-animated" : "")">
                                            <span class="status-text">
                                                PE
                                            </span>
                                        </button>
                                    </form>
                                </div>
                                <div class="col">
                                    @if (!string.IsNullOrEmpty(item.QC1) ||
                                       !string.IsNullOrEmpty(item.QC2) ||
                                       !string.IsNullOrEmpty(item.QC3) ||
                                       !string.IsNullOrEmpty(item.QC4_1) ||
                                       !string.IsNullOrEmpty(item.QC4_2) ||
                                       !string.IsNullOrEmpty(item.QC5))
                                    {
                                        <div class="status-dot bg-info" tabindex="0" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="งวดตรวจ QC" data-bs-html="true" data-bs-content="
                                        @if (!string.IsNullOrEmpty(item.QC1))
                                        {
                                            <div class='status-dot bg-@item.QC1'>
                                                <span class='status-text'>QC1</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.QC2))
                                        {
                                            <div class='status-dot bg-@item.QC2'>
                                                <span class='status-text'>QC2</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.QC3))
                                        {
                                            <div class='status-dot bg-@item.QC3'>
                                                <span class='status-text'>QC3</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.QC4_1))
                                        {
                                            <div class='status-dot bg-@item.QC4_1)'>
                                                <span class='status-text'>QC4.1</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.QC4_2))
                                        {
                                            <div class='status-dot bg-@item.QC4_2'>
                                                <span class='status-text'>QC4.2</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.QC5))
                                        {
                                            <div class='status-dot bg-@item.QC5'>
                                                <span class='status-text'>QC5</span>
                                            </div>
                                        }
                                    ">
                                                <span class="status-text">QC</span>
                                            </div>
                                    }
                                </div>
                                <div class="col">
                                    @if (@item.PEColor != "")
                                    {
                                        <form action="@Url.Action("index", "PMApprove", new { unitId = @item.UnitID, formId = @item.FormID , comeFrom = "SummaryUnitForm" })" method="post">
                                            <button type="submit" class="status-dot @item.PMColor @(item.PMColor == "bg-danger" || item.PMColor == "bg-warning" ? "status-dot-animated" : "")">
                                                <span class="status-text">
                                                    PM
                                                </span>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="status-dot bg-@item.PMColor @(item.PMColor == "bg-danger" || item.PMColor == "bg-warning" ? "status-dot-animated" : "")" onclick="showPEAlert()">
                                            <span class="status-text">
                                                PM
                                            </span>
                                        </button>
                                    }
                                </div>
                                <div class="col">
                                    @if (@item.Cnt_PC > 0)
                                    {
                                        <form asp-controller="SummaryUnitForm" asp-action="GoToPC" method="post">
                                            <input type="hidden" name="UnitFormID" value="@item.UnitFormID" />
                                            <input type="hidden" name="ComFrom" value="summaryunit" />
                                            <button type="submit" class="status-dot @item.PCColor">
                                                <i class="@item.PCIcon"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function showPEAlert() {
        Swal.fire({
            title: 'Warning!',
            text: 'PE ยังไม่เริ่มตรวจในงานนี้',
            icon: 'warning',
            confirmButtonText: 'OK'
        });
    }

</script>

