@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
    var UnitCode = ViewBag.UnitCode;
    var UnitStatusName = ViewBag.UnitStatusName;
}
@model List<Project.ConstructionTracking.Web.Models.SummeryUnitForm>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

<style>

    .fixed-size-btn {
        width: 80px; /* Adjust the width as needed */
        height: 30px;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .carousel-item {
        flex: 1 0 auto;
        text-align: center;
    }

    .card img {
        width: 285px;
        height: 235px;
        object-fit: cover;
        border-radius: 10px;
    }


    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #000;
        border-radius: 50%;
    }

    .status-text {
        font-size: 1em;
    }

    .animated-arrow {
        transition: transform 0.3s;
    }

    .status-dot {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        border: none;
        outline: none;
        font-size: 18px;
    }
</style>
<!-- Content Header (Page header) -->
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="card bg-primary text-primary-fg">
            <div class="card-stamp">
                <div class="card-stamp-icon bg-white text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-home-heart">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M21 12l-9 -9l-9 9h2v7a2 2 0 0 0 2 2h6" />
                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2c.39 0 .754 .112 1.061 .304" />
                        <path d="M19 21.5l2.518 -2.58a1.74 1.74 0 0 0 0 -2.413a1.627 1.627 0 0 0 -2.346 0l-.168 .172l-.168 -.172a1.627 1.627 0 0 0 -2.346 0a1.74 1.74 0 0 0 0 2.412l2.51 2.59z" />
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-baseline">
                        <form id="form-@projectId" method="post" asp-controller="Unitlist" asp-action="Index">
                            <input type="hidden" name="projectId" value="@projectId" />
                            <input type="hidden" name="projectName" value="@projectName" />
                            <button class="status-dot bg-transparent">
                                <i class="fa-solid fa-chevron-left fa-xl" style="color: #f7f7f7;"></i>
                            </button>
                        </form>
                    </div>
                    <div class="d-block d-sm-flex align-items-baseline custom-heading">
                        <h3 class="mb-0 header-text">Unit : @UnitCode</h3>
                        <div class="text-muted">
                            <h5 class="text-yellow d-block d-sm-inline ms-sm-2 mb-0">@projectName (สถานะ : @UnitStatusName)</h5>
                        </div>
                    </div>
                    <div class="align-items-right">
  @*                      <button id="toggleButton" class="status-dot bg-transparent" onclick="openCollapse()">
                            <i class="fas fa-arrow-down animated-arrow fa-xl" style="color: #f7f7f7;"></i>
                        </button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="col-12 collapse" id="collapseUnitdetail">
         @*   <partial name="Partial_Unit_Detail"/>*@
        </div>      
        <partial name="Partial_Summary_Form" model="Model"/>
    </div>
    <!-- Script -->
    <script>
        function openCollapse() {
            var collapseElement = document.getElementById('collapseUnitdetail');
            var bsCollapse = new bootstrap.Collapse(collapseElement, {
                toggle: false
            });
            if (collapseElement.classList.contains('show')) {
                bsCollapse.hide();
            } else {
                bsCollapse.show();
            }
        }

        document.getElementById('toggleButton').addEventListener('click', function () {
            const icon = this.querySelector('.fas');
            icon.classList.toggle('rotate-up');
            if (icon.classList.contains('rotate-up')) {
                icon.classList.remove('fa-arrow-down');
                icon.classList.add('fa-arrow-up');
            } else {
                icon.classList.remove('fa-arrow-up');
                icon.classList.add('fa-arrow-down');
            }
        });

    </script>
</div>


