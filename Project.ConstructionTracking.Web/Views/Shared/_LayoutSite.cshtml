    <script> 
        function openModalChat(UnitFormID, FormID, RoleID) {
            document.getElementById("hdname").value = UnitFormID; // Set the username in the hidden input
            document.getElementById("chatModal").style.display = "block"; // Show the modal
        }

        function closeModalChat() {
            document.getElementById("chatModal").style.display = "none"; // Hide the modal
        }

        function sendMessage() {
            var message = document.getElementById("chatInput").value;
            var username = document.getElementById("hdname").value; // Get the username from the hidden input
    
            if (message.trim() !== "") {
                var chatMessages = document.getElementById("chatMessages");
                var newMessage = document.createElement("p");
                newMessage.innerHTML = `<strong>${username}:</strong> ${message}`; // Use the username in the message
                chatMessages.appendChild(newMessage);
                document.getElementById("chatInput").value = ""; // Clear the input field
                chatMessages.scrollTop = chatMessages.scrollHeight; // Auto-scroll to the latest message
            }
        }
    </script>

