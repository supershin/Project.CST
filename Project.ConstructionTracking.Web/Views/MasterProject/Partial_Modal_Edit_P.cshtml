@model Project.ConstructionTracking.Web.Models.MProjectModel.InformationProjectResp

<div class="modal fade" id="modal-e" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div id="modal-format" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        <label class="form-label">BU</label>
                        <select class="form-control" id="e-bu-type" name="bu-type">
                            <option value="0">กรุณาเลือก BU</option>
                            @foreach (var data in Model.BUList)
                            {
                                <option value="@data.BUID">@data.BUName</option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label class="form-label">ประเภทโครงการ</label>
                        <select class="form-control" id="e-project-type" name="project-type">
                            <option value="0">กรุณาเลือกประเภทโครงการ</option>
                            @foreach (var data in Model.ProjectTypeList)
                            {
                                <option value="@data.ProjectTypeID">@data.ProjectTypeName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        <label class="form-label">รหัสโครงการ</label>
                        <input type="text" class="form-control" id="e-project-code">
                        <input type="hidden" id="e-project-id" />
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label class="form-label">ชื่อโครงการ</label>
                        <input type="text" class="form-control" id="e-project-name">
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <label class="form-label">Model Mapping</label>
                <div class="row">
                    <div class="col-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th hidden>ID</th>
                                    <th>รหัสโมเดล</th>
                                    <th>ชื่อโมเดล</th>
                                    <th>รหัสประเภทโมเดล</th>
                                    <th>ชื่อประเภทโมเดล</th>
                                    <th>ประเภทฟอร์ม</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                    Cancel
                </a>
                <button id="project-edit-save" class="btn btn-success ms-auto">
                    บันทึก
                </button>
            </div>
        </div>
    </div>
</div>